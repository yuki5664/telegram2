<div class="col-lg-5 mx-auto">
  <div class="col-lg-12 mb-3">
    <h1 class="text-center logo">Log In</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password" %>
    </div>

    <p class="actions">
      <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
    </p>

    <p>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-block mybtn btn-secondary" %>
    </p>
  <% end %>
</div>

